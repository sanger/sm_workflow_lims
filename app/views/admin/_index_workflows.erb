<div class="panel panel-default">
  <div class="panel-heading">
    <div class="title"> <h3 class="panel-title">Workflows</h3></div>
    <div class="admin-task-actions">[<a data-toggle="modal" data-target="#add-workflow-modal">Create a new workflow</a>]</div>
    <div style="clear: both;"></div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <th>Name</th>
      <th class="text-center">Has comments?</th>
      <th class="text-center">Is reportable?</th>
      <th class="text-center">Turn around time</th>
      <th></th>
    </thead>
    <tbody>
      <% presenter.each_workflow do |name,has_comment, id, reportable, turn_around| %>
        <tr><td><%= name %></td>
          <td class="text-center">
              <span class="glyphicon <%= has_comment ? 'glyphicon-ok':'glyphicon-remove' %>" aria-hidden="true"></span>
          </td>
          <td class="text-center">
            <span class="glyphicon <%= reportable ? 'glyphicon-ok':'glyphicon-remove' %>" aria-hidden="true"></span>
          </td>
          <td class="text-center">
            <%= turn_around ? "#{turn_around} #{'day'.pluralize(turn_around)}" : 'None' %>
          </td>
          <td>
            <a class="btn btn-default btn-xs edit-workflow" title="Edit workflow" href="admin/workflows/<%= id %>">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
