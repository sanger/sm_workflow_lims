<% presenter.each_asset(asset_type.name) do |asset, pos| %>
<tr data-psg-workflow="<%= asset.workflow %>" class="<%= asset.status_code %>">
  <% asset_type.asset_fields.each do |asset_field| %>
    <td>
      <%= asset.send(asset_field) %>
      <% if (asset_field == :completed_at) %>
        <% presenter.action do |action|%>
          <span style="float: right;">
            <input name="<%= action %>[<%= asset.id %>]" type="checkbox"/>
          </span>
        <% end %>
      <% end %>
    </td>
  <% end %>

  <% if presenter.is_search? %>
    <td class="assets-show-batch with-button"><a href="/batches/<%= asset.batch_id %>"><button type="button" class="btn btn-default table_button" data-psg-batch-id="<%= asset.batch_id %>" >Edit batch</button></a></td>
  <% else %>
    <td class="assets-select-batch with-button"><button type="button" class="btn btn-default table_button" data-psg-batch-id="<%= asset.batch_id %>" >Select batch</button></td>
  <% end %>
</tr>
<% end %>
